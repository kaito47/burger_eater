<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Eat Burgers!</h1>
        <p class="lead">Order a burger, devour the burger, repeat.</p>
        <hr class="my-4">

    </div>
    <div class="row">
        <div class="col-md-4">
            <h2>Burgers to Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h4>{{burger_name}}</h4><button class="devoured" data-id="{{id}}">DEVOUR ME!</button>
                {{!-- {{> burgers/burger-block}} --}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-4">
            <img src="/assets/img/burger.png" alt="burger">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="order">Enter the burger name here:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button type="submit">Order Burger</button>
            </form>

        </div>
        <div class="col-md-4">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h4>{{burger_name}}</h4>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>