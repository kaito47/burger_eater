<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h2>Burgers to Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <h3>{{burger_name}}</h3><button class="devoured" data-id="{{id}}">DEVOUR ME!</button>
                {{!-- {{> burgers/burger-block}} --}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-3">
            <h1>Eat Burgers!</h1>
            <img src="/assets/images/hamburger.png" alt="hamburger" />
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="order">Enter the burger name here:</label>
                    <input type="text" id="burger" name="name">
                </div>

                <button type="submit">Order Burger</button>
            </form>

        </div>
        <div class="col-md-3">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <h3>{{burger_name}}</h3>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>





